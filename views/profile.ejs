<html lang="en">
<head>
    <%- include('partials/head.ejs') %>
    <title>Document</title>

</head>
<body>
    <!-- <h1>Kinopoisk</h1> -->
    <%- include('partials/header.ejs') %>
    <div class="container">
        <div class="main">
            <!-- <h1>Hello</h1> -->
            <div class="categories">
                <h3>Жанры</h3>
                <%
                    genres.forEach((genre) => {
                %>
                <a href=""><%=genre.name%></a>
                <%
                    })
                %>
            </div>
            <div class="main-content">
                <h3>Профиль</h3>
                <div class="profile">
                    <div class="profile-img">
                        <img src="/images/profile-img.png" alt="">
                    </div>
                    <div class="profile-info">
                        <p><span>Полное имя: </span><%=user.full_name%><!-- Сейтжанов Ельнур --></p>
                        <p><span>E-mail: </span><%=user.email%><!--yelnur@mail.ru--></p>
                        <%
                            if(loginUser.id == user.id){
                        %>
                            <a class="edit-btn">Редактировать профиль</a>
                            <a href="/api/signout" class="logout-btn">Выход</a>                                
                        <%
                            }
                        %>

                    </div>
                </div>
                <h3>Сохраненные фильмы</h3>
                <div class="main-card">
                    <div class="card-left">
                        <div class="film-img">
                            <img src="/images/films/film1.webp" alt="">
                        </div>
                        <div class="film-info">
                            <a href="">Все везде и сразу</a>
                            <a href="">Everithing Everywhere All at Once, 2021, 139 мин</a>
                            <a href="">США, фантастика</a>
                            <button class="film-btn">
                                <img src="/images/icons/play.svg" alt="">
                                Смотреть
                            </button>
                        </div>
                    </div>
                    <div class="card-right">
                        <div class="film-rate">
                            <p>7.3</p>
                        </div>
                        <button class="film-btn">
                            <img src="/images/icons/save.svg" alt="">
                            Буду смотреть
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('partials/script.js')%>
</body>
</html>