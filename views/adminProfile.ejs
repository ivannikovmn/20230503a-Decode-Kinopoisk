<html lang="en">
<head>
    <%- include('partials/head.ejs') %>
    <title>Document</title>

</head>
<body>
    <!-- <h1>Kinopoisk</h1> -->
    <%- include('partials/header.ejs') %>
    <div class="container">
        <div class="main">
            <!-- <h1>Hello</h1> -->
            <div class="categories">
                <h3>Жанры</h3>
                <%
                    genres.forEach(genre => {
                %>
                    <a href=""><%=genre.name%></a>
                <%
                    })
                %>                
                <!-- <a href="">Комедия</a>
                <a href="">Ужасы</a> -->
            </div>
            <div class="main-content">
                <h3>Профиль</h3>
                <div class="profile">
                    <div class="profile-img">
                        <img src="/images/profile-img.png" alt="">
                    </div>
                    <div class="profile-info">
                        <p><span>Полное имя: </span><%=user.full_name%></p>
                        <p><span>E-mail: </span><%=user.email%></p>
                        <a class="edit-btn">Редактировать профиль</a>
                        <a href="/api/signout" class="logout-btn">Выход</a>
                    </div>
                </div>
                <!-- <div class="admin-btn"></div> -->
                <br><br><br><h3>Пользователи</h3>
                <%
                    users.forEach(item =>{
                %>
                    <div class="main-card">
                        <div class="card-left">
                            <div class="film-info">
                                <%=item.full_name%>
                            </div>
                        </div>
                        <div class="card-right">
                            <div class="film-btns">
                                <a href="/edit_user/<%=item._id%>">
                                    Редактировать
                                </a>
                                <a onclick="deleteUsers('<%=item.id%>' )">
                                    Удалить
                                </a>
                                <a href="/block_user/<%=item._id%>">
                                    Блок
                                </a>                                
                            </div>
                        </div>
                    </div>
                <%
                    })
                %>                          
                <br><br><br><br><br><br><h3>Комментарии</h3>
                <%
                    rates.forEach(item =>{
                %>
                    <div class="main-card">
                        <div class="card-left">
                            <div class="film-info">
                                <%=item.text%>
                            </div>
                        </div>
                        <div class="card-right">
                            <div class="film-btns">
                                <a href="/edit_comment/<%=item._id%>">
                                    Редактировать
                                </a>
                                <a onclick="deleteRates('<%=item._id%>' , '<%=item.authorId._id%>' )">
                                    Удалить
                                </a>
                            </div>
                        </div>
                    </div>
                <%
                    })
                %>                
                <br><br><br><br><br><br><h3>Фильмы</h3>
                <a href="/new" class="add-btn">Добавить фильм</a>
                <%
                    films.forEach(item =>{
                %>
                    <div class="main-card">
                        <div class="card-left">
                            <div class="film-img">
                                <img src="<%=item.image%>" alt="">
                            </div>
                            <div class="film-info">
                                <a href=""><%=item.titleRus%></a>
                                <a href=""><%=item.titleEng%>, <%=item.year%>, <%=item.time%>мин</a>
                                <a href=""><%=item.country.name%>, <%=item.genre.name%></a>
                                <a href="">Автор: <%=item.author.full_name%></a>
                                <button class="film-btn">
                                    <img src="/images/icons/play.svg" alt="">
                                    Смотреть
                                </button>
                            </div>
                        </div>
                        <div class="card-right">
                            <div class="film-rate">
                                <p>7.3</p>
                            </div>
                            <div class="film-btns">
                                <a href="/edit/<%=item._id%>">
                                    Редактировать
                                </a>
                                <a onclick="deleteFilms('<%=item._id%>' , '<%=item.author._id%>')">
                                    Удалить
                                </a>
                            </div>
                        </div>
                    </div>
                <%
                    })
                %>
            </div>
        </div>
    </div>
    <%- include('partials/scripts.ejs')%>
</body>
</html>